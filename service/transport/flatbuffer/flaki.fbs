namespace flaki;

// The response message containing the unique ID or an error
table NextIDReply {
    id:ulong;
    error:string;
}

// The response message containing the unique ID
table NextValidIDReply {
    id:ulong;
}

table EmptyRequest {
}

rpc_service Flaki {
  NextID(EmptyRequest):NextIDReply;
  NextValidID(EmptyRequest):NextValidIDReply;
}

root_type NextValidIDReply;

